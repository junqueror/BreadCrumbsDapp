{
  "name": "bread-crumbs-backend",
  "private": true,
  "version": "0.0.0",
  "description": "Smart Contracts and Token for user tracking over the blockchain",
  "author": "pmjunquera@gmail.com",
  "scripts": {
    "ganache": "ganache -h 127.0.0.1 -p 8545 -i 1337",
    "truffle:test": "truffle test",
    "truffle:compile": "cd ./backend && truffle compile",
    "truffle:migrate:ganache": "cd ./backend && truffle migrate",
    "truffle:migrate:testnet": "cd ./backend && truffle migrate --network testnet",
    "truffle:migrate:bsc": "cd ./backend && truffle migrate --network bsc",
    "truffle:develop": "cd ./backend && truffle develop --log",
    "lint": "eslint ./ --ext .js --ext .jsx .ts --ext .tsx --ext .ms --ext .mdx",
    "lint:fix": "eslint ./ --ext .js --ext .jsx --ext .ts --ext .tsx --ext .ms --ext .mdx --fix"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.4.2",
    "@truffle/hdwallet-provider": "^2.0.6",
    "@types/node": "17.0.10",
    "babel-polyfill": "6.26.0",
    "babel-register": "6.26.0",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "chai-bignumber": "3.0.0",
    "dotenv-cli": "^5.0.0",
    "nanoid": "^3.3.0",
    "truffle": "5.5.10",
    "truffle-assertions": "^0.9.2"
  },
  "devDependencies": {
    "ganache": "^7.0.1",
    "ganache-cli": "^6.12.2"
  }
}
